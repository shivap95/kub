pipeline{
    agent any
    tools {
        maven 'maven3'
    }
    stages{
        stage('SCM'){
            steps{
                git branch: 'Master', url: 'https://github.com/Javaish/jenkins.git'
            }
        }
        stage('Maven Build'){
            steps{
                sh "mvn clean package"
            }
        }
        stage('Docker Build'){
            steps{
                sh " docker build . -t javeeds/jenkins0:0.8 "
            }
        }
        stage('DockerHub Push'){
            steps{
                withCredentials([usernameColonPassword(credentialsId: 'dockerhub', variable: 'dockerhubcred')]) {
                // some block
                }
                sh "docker push javeeds/jenkins0:0.8"
            }
        }
        stage('Kubernetes Deploy'){
            steps{
                sshagent(['masternode']) {
                    sh 'scp -o StrictHostKeyChecking=no deployment.yml service.yml script.sh ubuntu@172.31.54.67:/home/ubuntu'
                }
                ansiblePlaybook  credentialsId: 'masternode', disableHostKeyChecking: true, installation: 'ansible', inventory: 'dev.inv', playbook: 'deploy-service.yml'
            }
        }
    }
}
